import plotly.graph_objects as go

nodes = ["Источник A", "Источник B", "Источник C",
         "Цель X", "Цель Y", "Цель Z"]

source = [0, 1, 0, 2, 3, 3]
target = [3, 3, 4, 4, 4, 5]
value = [8, 4, 2, 8, 4, 2]

node_colors = ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd", "#8c564b"]
